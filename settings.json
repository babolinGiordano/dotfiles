  "peacock.affectActivityBar": true,
  "peacock.surpriseMeOnStartup": true,
  "git.enableSmartCommit": true,
  "telemetry.enableTelemetry": false,
  "gitlens.advanced.telemetry.enabled": false,
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "**/env": true,
